<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Thanos Katrakis School Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <div class="container">

        @*NAVIGATION BAR*@
        <div>
            @RenderPage("Components/_NavigationBar.cshtml")
        </div>

        @*MAIN CONTENT*@
        <div>
            @RenderBody()
        </div>

        @*FOOTER*@
        <div>
            @RenderPage("Components/_Footer.cshtml")
        </div>
        
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
